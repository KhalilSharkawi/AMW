@model IEnumerable<WebSite.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new {@class ="btn btn-primary" })
    @Html.ActionLink("Report", "Report", null, new { @class = "btn btn-secondary" })
</p>



<div class="limiter">
    <div>
        <div class="wrap-table100">
            <div class="table">

                <div class="row header">
                    <div class="cell">
                        @Html.DisplayNameFor(model => model.Name)
                    </div>
                    <div class="cell">
                        @Html.DisplayNameFor(model => model.MobileNumber)
                    </div>
                    <div class="cell">
                        @Html.DisplayNameFor(model => model.NationalNumber)
                    </div>
                    <div class="cell">
                        @Html.DisplayNameFor(model => model.Residence)
                    </div>
                    <div class="cell">
                        @Html.DisplayNameFor(model => model.Address)
                    </div>
                    <div class="cell">
                        @Html.DisplayNameFor(model => model.CardNumber)
                    </div>
                    <div class="cell">
                        @Html.DisplayNameFor(model => model.VehicleNumber)
                    </div>
                    <div class="cell">Actions</div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="cell" data-title="Name">
                            @Html.DisplayFor(modelItem => item.Name)
                        </div>
                        <div class="cell" data-title="Mobile Number">
                            @Html.DisplayFor(modelItem => item.MobileNumber)
                        </div>
                        <div class="cell" data-title="National Number">
                            @Html.DisplayFor(modelItem => item.NationalNumber)
                        </div>
                        <div class="cell" data-title="Residence">
                            @Html.DisplayFor(modelItem => item.Residence)
                        </div>
                        <div class="cell" data-title="Address">
                            @Html.DisplayFor(modelItem => item.Address)
                        </div>
                        <div class="cell" data-title="Card Number">
                            @Html.DisplayFor(modelItem => item.CardNumber)
                        </div>
                        <div class="cell" data-title="Vehicle Number">
                            @Html.DisplayFor(modelItem => item.VehicleNumber)
                        </div>
                        <div class="cell">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-secondary" })
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
