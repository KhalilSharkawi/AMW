@model IEnumerable<WebSite.Models.Transaction>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>


<div class="limiter">
    <div >
        <div class="wrap-table100">
            <div class="table">

                <div class="row header">
                    <div class="cell">
                        @Html.DisplayNameFor(model => model.Customer.Name)
                    </div>
                    <div class="cell">
                        @Html.DisplayNameFor(model => model.Date)
                    </div>
                    <div class="cell">
                        @Html.DisplayNameFor(model => model.PetrolAmount)
                    </div>
                    <div class="cell">
                        @Html.DisplayNameFor(model => model.FreeAmount)
                    </div>
                    <div class="cell">
                        @Html.DisplayNameFor(model => model.TotalPrice)
                    </div>
                    <div class="cell">Actions</div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="cell" data-title="Name">
                            @Html.DisplayFor(modelItem => item.Customer.Name)
                        </div>
                        <div class="cell" data-title="Date">
                            @Html.DisplayFor(modelItem => item.Date)
                        </div>
                        <div class="cell" data-title="PetrolAmount">
                            @Html.DisplayFor(modelItem => item.PetrolAmount)
                        </div>
                        <div class="cell" data-title="FreeAmount">
                            @Html.DisplayFor(modelItem => item.FreeAmount)
                        </div>
                        <div class="cell" data-title="TotalPrice">
                            @Html.DisplayFor(modelItem => item.TotalPrice)
                        </div>
                        <div class="cell" >
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary " })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-secondary" })
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>